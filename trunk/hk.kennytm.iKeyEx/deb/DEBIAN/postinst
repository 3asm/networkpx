#!/bin/bash

declare -a cydia
cydia=($CYDIA)

if [[ $1 == configure ]]; then
	ln -s /Library/iKeyEx/lib/libiKeyEx.dylib /usr/lib/libiKeyEx.dylib;
	ln -s /Library/iKeyEx/lib/PrefHooker-iKeyEx.dylib /Library/MobileSubstrate/DynamicLibraries/PrefHooker-iKeyEx.dylib
	ln -s /Library/iKeyEx/lib/SBHooker-iKeyEx.dylib /Library/MobileSubstrate/DynamicLibraries/SBHooker-iKeyEx.dylib
	ldid -S /usr/bin/iKeyEx-KBMan
fi