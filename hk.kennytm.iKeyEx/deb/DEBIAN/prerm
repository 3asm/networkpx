#!/bin/bash

declare -a cydia
cydia=($CYDIA)

if [[ $1 == remove ]]; then
	mv /usr/lib/libiKeyEx.dylib /var/mobile/Library/iKeyEx/lib/libiKeyEx.dylib;
	mv /Library/MobileSubstrate/DynamicLibraries/PrefHooker-iKeyEx.dylib /var/mobile/Library/iKeyEx/lib/PrefHooker-iKeyEx.dylib
	mv /Library/MobileSubstrate/DynamicLibraries/SBHooker-iKeyEx.dylib /var/mobile/Library/iKeyEx/lib/SBHooker-iKeyEx.dylib
	iKeyEx-KBMan removeall
	rmdir /var/mobile/Library/Keyboard/iKeyEx/cache
	rmdir /var/mobile/Library/Keyboard/iKeyEx
	if [[ ${CYDIA+@} ]]; then
	        eval "echo 'finish:restart' >&${cydia[0]}"
    	fi
fi